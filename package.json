{
  "name": "swag-labs-tests",
  "version": "1.0.0",
  "description": "Playwright + TypeScript test automation framework for Swag Labs",
  "type": "module",
  "scripts": {
    "prepare": "is-ci || husky install",
    "test:local": "source .env && npm run test:e2e",
    "test:e2e": "npx playwright test --config=\"./playwright.config.ts\" --project 'Swag Labs tests'",
    "lint:check": "eslint --max-warnings=0 --ignore-path .gitignore \"**/**/*.ts\"",
    "lint:fix": "npm run lint:check -- --fix",
    "format:check": "prettier --ignore-path .gitignore --list-different '**/**/*.{ts,md}'",
    "format:fix": "npm run format:check -- --write",
    "format:all": "npm run format:fix && npm run lint:fix",
    "lint-staged": "lint-staged",
    "report:open": "npx playwright show-report pw-report-html"
  },
  "dependencies": {
    "@playwright/test": "^1.58.0",
    "dotenv": "^17.2.3",
    "typescript": "^5.7.3"
  },
  "devDependencies": {
    "@types/node": "^25.0.10",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.3",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "prettier": "^3.4.2"
  }
}
